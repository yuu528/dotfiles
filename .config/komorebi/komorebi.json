{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.24/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": false,
  "default_workspace_padding": 1,
  "default_container_padding": 5,
  "border_padding": 0,
  "border_offset": -1,
  "border_width": 4,
  "border": true,
  "border_colours": {
    "single": "#b8bb26",
    "stack": "#83a598",
    "monocle": "#fabd2f",
    "unfocused": "#928374"
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP"
        },
        {
          "name": "2",
          "layout": "BSP"
        },
        {
          "name": "3",
          "layout": "BSP"
        },
        {
          "name": "4",
          "layout": "BSP"
        },
        {
          "name": "5",
          "layout": "BSP"
        },
        {
          "name": "6",
          "layout": "BSP"
        },
        {
          "name": "7",
          "layout": "BSP"
        },
        {
          "name": "8",
          "layout": "BSP"
        },
        {
          "name": "9",
          "layout": "BSP"
        }
      ]
    }
  ],
  "stackbar": {
    "height": 18,
    "mode": "OnStack",
    "tabs": {
      "width": 180,
      "focused_text": "#8ec07c",
      "unfocused_text": "#928374",
      "background": "#282828",
      "font_size": 18,
      "fomt_family": "IBM Plex Sans JP"
    }
  },
  "float_rules": [
    {
      "kind": "Exe",
      "id": "Zebar.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "quartus.exe",
      "matching_strategy": "Equals"
    }
  ],
  "ignore_rules": [
    {
      "kind": "Class",
      "id": "OneNote::CNavigationUIPerMonitorDpiAwareWindow",
      "matching_strategy": "Equals"
    }
  ],
  "animation": {
    "enabled": true,
    "duration": 200,
    "style": "EaseInOutCirc"
  }
}
